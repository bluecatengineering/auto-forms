{
  "name": "@bluecateng/auto-forms",
  "version": "0.5.0",
  "description": "Auto-wired form hooks",
  "license": "ISC",
  "scripts": {
    "build:es5": "rm -rf es5 && BABEL_ENV=es5 babel -d es5 src",
    "build:es6": "rm -rf es6 && BABEL_ENV=es6 babel -d es6 src",
    "build": "npm run build:es5 && npm run build:es6",
    "test": "jest --verbose",
    "test-ci": "npm ci && jest --ci --silent --reporters=jest-junit",
    "lint": "eslint src",
    "reformat": "prettier --write .",
    "prepack": "npm t && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bluecatengineering/auto-forms.git"
  },
  "keywords": [
    "react",
    "hooks",
    "form"
  ],
  "files": [
    "index.js",
    "es5",
    "es6"
  ],
  "peerDependencies": {
    "react": ">= 16.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@bluecateng/eslint-config-react": "^2.0.1",
    "@bluecateng/git-checks": "^0.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "^7.16.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.5.3",
    "lodash-es": "^4.17.20",
    "prettier": "^2.2.1",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "jest": {
    "automock": true,
    "clearMocks": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/jest_helpers/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest_helpers/setup-enzyme"
    ],
    "timers": "fake",
    "transformIgnorePatterns": [
      "node_modules/(?!(lodash-es|@bluecateng)/)"
    ],
    "unmockedModulePathPatterns": [
      "enzyme",
      "lodash-es",
      "prop-types",
      "react",
      "react-dom"
    ]
  },
  "jest-junit": {
    "outputDirectory": "build",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " / "
  },
  "eslintConfig": {
    "extends": "@bluecateng/react"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "check-git-msg",
      "pre-push": "check-git-commits"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{json,less,md,yml}": [
      "prettier --write"
    ]
  }
}
