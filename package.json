{
  "name": "@bluecateng/auto-forms",
  "version": "0.4.0",
  "description": "Auto-wired form hooks",
  "license": "ISC",
  "scripts": {
    "build:es5": "rm -rf es5 && BABEL_ENV=es5 babel -d es5 src",
    "build:es6": "rm -rf es6 && BABEL_ENV=es6 babel -d es6 src",
    "build": "npm run build:es5 && npm run build:es6",
    "test": "jest --verbose",
    "test-ci": "npm install && jest --ci --silent --reporters=jest-junit",
    "lint": "eslint --ext .js,.jsx src",
    "reformat": "prettier --write \"**/*.+(js|jsx|json|less)\"",
    "prepack": "npm t && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bluecatengineering/auto-forms.git"
  },
  "keywords": [
    "react",
    "hooks",
    "form"
  ],
  "files": [
    "index.js",
    "es5",
    "es6"
  ],
  "peerDependencies": {
    "react": ">= 16.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@bluecateng/eslint-config-react": "^1.1.0",
    "@bluecateng/git-checks": "^0.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-junit": "^10.0.0",
    "lint-staged": "^9.5.0",
    "lodash-es": "^4.17.15",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "jest": {
    "automock": true,
    "clearMocks": true,
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/jest_helpers/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest_helpers/setup-enzyme"
    ],
    "timers": "fake",
    "transformIgnorePatterns": [
      "node_modules/(?!(lodash-es|@bluecateng)/)"
    ],
    "unmockedModulePathPatterns": [
      "enzyme",
      "lodash-es",
      "prop-types",
      "react",
      "react-dom"
    ]
  },
  "jest-junit": {
    "output": "build/jest/results.xml",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " / "
  },
  "eslintConfig": {
    "extends": "@bluecateng/react"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "check-git-msg",
      "pre-push": "check-git-commits"
    }
  },
  "lint-staged": {
    "(package.json|package-lock.json)": [],
    "*.{js,jsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write",
      "git add"
    ],
    "*.{json,less,md,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
